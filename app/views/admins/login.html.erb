  <div class="container">
  <h2>Prijava administratora</h2>
      <form id="prijava">
        
      <br><br>
        <div class="form-group">
        	<label class="control-label col-sm-2" for="email">Username:</label>
          <div class="col-sm-10">
        	   <input type="text" class="form-control username"><br>
          </div>
        </div>
        <div class="form-group">
        	<label class="control-label col-sm-2" for="email">Password:</label>
          <div class="col-sm-10">
        	   <input type="password", class="form-control password"><br>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
        	   <input type="submit" class="btn btn-info ok1" value="Prijava" style="width: 200px;"><br>
          </div>
        </div>
      	<br>
      </form>
  </div>


<script type="text/javascript">
	$('#prijava').submit(function() {
    	username = $('.username').val();
    	password = $('.password').val();
    	$.ajax({
            url: '/admins/checkUser',
            data: { 
              username: username,
              password: password,
            },
            type: 'POST',
            success: function(result) {
              if (result.status) {
              	alert(result.status);
              	$('.username').val("");
              	$('.password').val("");
              }
            }
        });
	});
</script>






